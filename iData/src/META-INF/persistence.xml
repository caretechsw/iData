<?xml version="1.0" encoding="UTF-8"?>
<persistence-unit name="com.baeldung.movie_catalog">
    <description>Hibernate EntityManager</description>
    <class>hk.com.caretech.clive.iData.model.Elder</class>
    <class>hk.com.caretech.clive.iData.model.Temperature</class> 
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="show_sql">true</property>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/idata"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.password" value="1234"/>
    </properties>
</persistence-unit>